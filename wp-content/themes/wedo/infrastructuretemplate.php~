                                  $params = array(
                                      'post_type'=>'page',
                                      'post_parent'=> get_post()->ID,
                                   );
                                   $staff = query_posts($params);
                                   if( count($staff)<= 0){
                                    $params['post_parent'] = get_post()->post_parent;
                                    $staff = query_posts($params);
                                   }
                                   if( count($staff)> 0){
                            ?>
                            <div class="sidebar-widget">
                                <h1><?php _e("Applications","wedo"); ?></h1>                                
                                <ul class="">
                                  <?php                                     
                                    foreach ($staff as $bookmark ) :
                                  ?>
                                   <li style="font-size:14px;">
